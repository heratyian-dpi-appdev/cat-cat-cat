<div>
  <div>
    <h1>
      Cat #<%= @the_cat.id %> details
    </h1>

    <div>
      <div>
        <a href="/cats">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_cat/<%= @the_cat.id %>">
          Delete cat
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_cat.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_cat.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_cat.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit cat
    </h2>

    <form action="/modify_cat/<%= @the_cat.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_cat.name %>">
      </div>

      <button>
        Update cat
      </button>
    </form>
  </div>
</div>

<hr>
